# Grok CLI Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Your Grok API key from x.ai
GROK_API_KEY=your_grok_api_key_here

# Optional: Custom model (default: grok-4-0709)
GROK_MODEL=grok-4-0709

# Optional: Custom base URL (default: https://api.x.ai/v1)
GROK_BASE_URL=https://api.x.ai/v1

# Optional: Temperature for responses (default: 0.7)
GROK_TEMPERATURE=0.7

# Optional: Max tokens per response (default: 1000)
GROK_MAX_TOKENS=1000

# Optional: Agent verbosity (default: False)
GROK_VERBOSE=False
